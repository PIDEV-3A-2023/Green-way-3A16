{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div style="display: flex; align-items: center; justify-content: center; margin-left: 300px; margin-top: 65px;">

            <div class="card" style="">
                <div class="card-body" style="height: 600px; width: 500px; padding: 80% 100; font-size: 10px; margin: 5px;">
                    <h5>Ajouter une evaluation</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                    <div class="form-group" style="margin-top:20px">
                        {{ form_label(form.contenu, 'Contenu:', {label_attr: {'style': 'margin-bottom: 10px;'}}) }}
                       <div style="margin-left: 150px; margin-top: 20px;">
                      {{ form_widget(form.contenu, {attr: {class: 'form-control'}, 'choice_widget': 'select'}) }}
                        </div>
                        {{ form_errors(form.contenu, {attr: {class: 'text-danger'}}) }}
                    </div>

                    <div class="form-group" style="margin-top:20px">
                        {{ form_label(form.rating, 'Rating:') }}
                        <div style="margin-left: 150px; margin-top: 15px;">
                        {{ form_widget(form.rating, {attr: {class: 'form-control'}, 'choice_widget': 'select'}) }}
                        </div>
                        {{ form_errors(form.rating, {attr: {class: 'text-danger'}}) }}
                    </div>

                   
                    <br/>
                    <button type="submit" class="btn btn-primary">Create</button>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
    

     <a href="{{ path('app_materiaux_index') }}">retour</a>
{% endblock %}